CREATE TABLE favorites(
    id INTEGER NOT NULL PRIMARY KEY AUTOINCREMENT,
    title TEXT NOT NULL,
    price TEXT NOT NULL,
    description TEXT NOT NULL,
    image TEXT NOT NULL,
    timestamp INTEGER NOT NULL,
    category TEXT NOT NULL
);

getFavorites:
SELECT *
FROM favorites
ORDER BY timestamp DESC;

saveFavorite:
INSERT OR REPLACE
INTO favorites(
    id,
    title,
    price,
    description,
    image,
    timestamp,
    category
)
VALUES(?, ?, ?, ?, ?, ?, ?);